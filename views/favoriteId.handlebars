<div class="flex font-sans favorite" >

  <div class="flex flex-wrap"  >
    <h2 class="flex-auto text-lg font-bold text-slate-900" data-id={{favorite.id}}>
      {{favorite.title}}
      <button type="button" onclick="deleteId(event)">Delete Recipe</button>
      
    </h2>
  </div>

  <div class = "flex-none w-48 relative">
        <img src="{{favorite.image_url}}" class="absolute inset-0 w-full h-full object-cover"/>
  </div>
  
  <div id="recipe-info" data-index='{{favorite.recipeID}}'>
    <button type="button" id="show-more">Show More</button>
  </div>
</div>

<script src="/js/favoriteIdInfo.js" ></script>
<script src="/js/deleteId.js"></script>